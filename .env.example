# ====================================
# Firebase Configuration
# ====================================
# Get these from Firebase Console > Project Settings > General
# https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# ====================================
# Push Notifications - OneSignal
# ====================================
# Get from OneSignal Dashboard > Settings > Keys & IDs
# https://onesignal.com/
VITE_ONESIGNAL_APP_ID=your_onesignal_app_id_here

# ====================================
# Analytics Platforms
# ====================================
# Amplitude Analytics - Get from Amplitude Dashboard
# https://analytics.amplitude.com/
VITE_AMPLITUDE_API_KEY=your_amplitude_api_key_here

# Microsoft Clarity - Get from Clarity Dashboard
# https://clarity.microsoft.com/
VITE_CLARITY_PROJECT_ID=your_clarity_project_id_here

# ====================================
# External APIs
# ====================================
# NASA API Key - Get from https://api.nasa.gov/
# Used for exoplanet data and space imagery
VITE_NASA_API_KEY=your_nasa_api_key_here

# ====================================
# Firebase Emulators (Local Development Only)
# ====================================
# Set to true to use local Firebase emulators instead of production
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_AUTH_URL=http://localhost:9099
VITE_FIREBASE_EMULATOR_FIRESTORE_HOST=localhost
VITE_FIREBASE_EMULATOR_FIRESTORE_PORT=8080
VITE_FIREBASE_EMULATOR_STORAGE_HOST=localhost
VITE_FIREBASE_EMULATOR_STORAGE_PORT=9199
VITE_FIREBASE_EMULATOR_FUNCTIONS_HOST=localhost
VITE_FIREBASE_EMULATOR_FUNCTIONS_PORT=5001

# ====================================
# App Configuration
# ====================================
VITE_APP_NAME=ExoHunter AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development